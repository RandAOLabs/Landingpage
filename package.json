{
  "name": "site-deployer",
  "version": "1.0.0",
  "description": "Automated site downloader and permaweb deployer",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "deploy": "npm run build && permaweb-deploy --deploy-folder ./dist --ant-process $DEPLOY_ANT_PROCESS",
    "lint": "eslint .",
    "preview": "vite preview",
    "download": "node scripts/download-site.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "permaweb-deploy": "^1.1.8"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0"
  }
}
